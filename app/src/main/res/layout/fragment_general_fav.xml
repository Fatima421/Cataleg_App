<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/generalBackground"
    tools:context=".Favourites.GeneralFavFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/seeFavsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/notosanshk_bold"
            android:gravity="center"
            android:text="@string/seeFavsAgain"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/musicFavSection"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/music_fav"
            app:layout_constraintEnd_toStartOf="@+id/movieFavSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seeFavsText" />

        <ImageView
            android:id="@+id/movieFavSection"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="42dp"
            android:src="@drawable/movie_fav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/musicFavSection"
            app:layout_constraintTop_toBottomOf="@+id/seeFavsText" />

        <ImageView
            android:id="@+id/gameFavSection"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/game_fav"
            app:layout_constraintEnd_toStartOf="@+id/bookFavSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/musicFavSection" />

        <ImageView
            android:id="@+id/bookFavSection"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="42dp"
            android:src="@drawable/book_fav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gameFavSection"
            app:layout_constraintTop_toBottomOf="@+id/movieFavSection" />

        <TextView
            android:id="@+id/musicFavTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music"
            android:fontFamily="@font/notosanshk_medium"
            android:textColor="#26CBFD"
            android:textSize="16dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintBottom_toBottomOf="@+id/musicFavSection"
            app:layout_constraintEnd_toEndOf="@+id/musicFavSection"
            app:layout_constraintStart_toStartOf="@+id/musicFavSection"
            app:layout_constraintTop_toTopOf="@+id/musicFavSection" />

        <TextView
            android:id="@+id/moviesFavTxt"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanshk_medium"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="@string/movies"
            android:textColor="#F13938"
            android:textColorHighlight="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/movieFavSection"
            app:layout_constraintEnd_toEndOf="@+id/movieFavSection"
            app:layout_constraintStart_toStartOf="@+id/movieFavSection"
            app:layout_constraintTop_toTopOf="@+id/movieFavSection" />

        <TextView
            android:id="@+id/gamesFavTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanshk_medium"
            android:text="@string/games"
            android:textColor="#E325F0"
            android:textSize="14dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintBottom_toBottomOf="@+id/gameFavSection"
            app:layout_constraintEnd_toEndOf="@+id/gameFavSection"
            app:layout_constraintStart_toStartOf="@+id/gameFavSection"
            app:layout_constraintTop_toTopOf="@+id/gameFavSection" />

        <TextView
            android:id="@+id/bookFavTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/books"
            android:textColor="#FCC715"
            android:fontFamily="@font/notosanshk_medium"
            android:textSize="16dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintBottom_toBottomOf="@+id/bookFavSection"
            app:layout_constraintEnd_toEndOf="@+id/bookFavSection"
            app:layout_constraintStart_toStartOf="@+id/bookFavSection"
            app:layout_constraintTop_toTopOf="@+id/bookFavSection" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>